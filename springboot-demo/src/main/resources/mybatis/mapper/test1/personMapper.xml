<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.test1.PersonMapper">
    <resultMap id="PersonMap" type="com.example.domain.Person">
        <id property="id" column="id" jdbcType="INTEGER" />
        <result property="name" column="name" jdbcType="VARCHAR" />
    </resultMap>

    <select id="getAll" resultMap="PersonMap">
        select * from person;
    </select>

    <select id="getById" parameterType="Integer">
        select * from person where id=#{id};
    </select>

    <select id="insert" parameterType="com.example.domain.Person">
        insert into person(id, name) values (#{id, jdbcType=INTEGER}, #{name, jdbcType=VARCHAR});
    </select>

</mapper>